@prefix prod: <http://example.org/production-domain#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# ===== Production Domain Ontology: WHAT we work with =====

prod:ProductionDomainOntology rdf:type owl:Ontology ;
    rdfs:label "Production Domain Ontology" ;
    rdfs:comment "Defines production domain concepts: jobs, machines, operations, etc." .

# ===== Core Domain Classes =====

prod:Product rdf:type owl:Class ;
    rdfs:comment "A product type that can be manufactured" .

prod:Part rdf:type owl:Class ;
    rdfs:comment "An instance of a product being manufactured" .

prod:Job rdf:type owl:Class ;
    rdfs:comment "A unit of work containing multiple operations" .

prod:Operation rdf:type owl:Class ;
    rdfs:comment "A specific task within a job" .

prod:Machine rdf:type owl:Class ;
    rdfs:comment "Production equipment or machinery" .

prod:Scenario rdf:type owl:Class ;
    rdfs:comment "A collection of jobs forming a production plan" .

prod:Capability rdf:type owl:Class ;
    rdfs:comment "A capability that a machine can provide" .

prod:ExecutionResult rdf:type owl:Class ;
    rdfs:comment "Result of job or operation execution" .

prod:ErrorLog rdf:type owl:Class ;
    rdfs:comment "Error information from execution" .

prod:Plan rdf:type owl:Class ;
    rdfs:comment "A production schedule or plan" .

prod:Assignment rdf:type owl:Class ;
    rdfs:comment "Assignment of job to machine" .

prod:AASEndpoint rdf:type owl:Class ;
    rdfs:comment "Asset Administration Shell endpoint information" .

# ===== Domain Properties =====

# Structural relationships
prod:composedOf rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Job ;
    rdfs:range prod:Operation ;
    rdfs:comment "Job is composed of operations" .

prod:partOfScenario rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Job ;
    rdfs:range prod:Scenario ;
    rdfs:comment "Job is part of a scenario" .

prod:executedOn rdf:type owl:ObjectProperty ;
    rdfs:domain [owl:unionOf (prod:Job prod:Operation)] ;
    rdfs:range prod:Machine ;
    rdfs:comment "Executed on which machine" .

prod:hasCapability rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Machine ;
    rdfs:range prod:Capability ;
    rdfs:comment "Capability provided by machine" .

prod:requiresCapability rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Operation ;
    rdfs:range prod:Capability ;
    rdfs:comment "Capability required by operation" .

prod:canExecute rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Machine ;
    rdfs:range prod:Operation ;
    rdfs:comment "Machine can execute operation" .

# Status and results
prod:hasStatus rdf:type owl:DatatypeProperty ;
    rdfs:domain [owl:unionOf (prod:Job prod:Machine prod:Scenario)] ;
    rdfs:range xsd:string ;
    rdfs:comment "Current status" .

prod:hasExecutionResult rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Job ;
    rdfs:range prod:ExecutionResult ;
    rdfs:comment "Execution result of job" .

prod:hasErrorLog rdf:type owl:ObjectProperty ;
    rdfs:domain [owl:unionOf (prod:Machine prod:ExecutionResult)] ;
    rdfs:range prod:ErrorLog ;
    rdfs:comment "Error log information" .

# Time properties
prod:hasStartTime rdf:type owl:DatatypeProperty ;
    rdfs:domain [owl:unionOf (prod:Job prod:Scenario)] ;
    rdfs:range xsd:dateTime ;
    rdfs:comment "Start time" .

prod:hasEndTime rdf:type owl:DatatypeProperty ;
    rdfs:domain [owl:unionOf (prod:Job prod:Scenario)] ;
    rdfs:range xsd:dateTime ;
    rdfs:comment "End time" .

prod:hasDuration rdf:type owl:DatatypeProperty ;
    rdfs:domain [owl:unionOf (prod:Job prod:Operation)] ;
    rdfs:range xsd:decimal ;
    rdfs:comment "Duration in minutes" .

# Process requirements
prod:requiresCooling rdf:type owl:DatatypeProperty ;
    rdfs:domain prod:Job ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Whether job requires cooling process" .

prod:requiresHeating rdf:type owl:DatatypeProperty ;
    rdfs:domain prod:Job ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Whether job requires heating process" .

prod:requiresAssembly rdf:type owl:DatatypeProperty ;
    rdfs:domain prod:Job ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Whether job requires assembly process" .

# Product tracking
prod:forProduct rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Job ;
    rdfs:range prod:Product ;
    rdfs:comment "Job is for which product" .

prod:currentOperationIndex rdf:type owl:DatatypeProperty ;
    rdfs:domain prod:Job ;
    rdfs:range xsd:integer ;
    rdfs:comment "Current operation index in progress" .

prod:producedBy rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Product ;
    rdfs:range prod:Machine ;
    rdfs:comment "Product produced by machine" .

# Planning
prod:hasPlan rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Scenario ;
    rdfs:range prod:Plan ;
    rdfs:comment "Scenario has production plan" .

prod:hasAssignment rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Plan ;
    rdfs:range prod:Assignment ;
    rdfs:comment "Plan has job-machine assignments" .

# AAS integration
prod:hasAASEndpoint rdf:type owl:ObjectProperty ;
    rdfs:domain prod:Machine ;
    rdfs:range prod:AASEndpoint ;
    rdfs:comment "Machine's AAS endpoint information" .

prod:baseURL rdf:type owl:DatatypeProperty ;
    rdfs:domain prod:AASEndpoint ;
    rdfs:range xsd:anyURI ;
    rdfs:comment "Base URL of AAS endpoint" .

prod:submodelPath rdf:type owl:DatatypeProperty ;
    rdfs:domain prod:AASEndpoint ;
    rdfs:range xsd:string ;
    rdfs:comment "Path to specific submodel" .

# ===== Capability Instances =====

prod:CoolingCapability rdf:type prod:Capability ;
    rdfs:label "Cooling Capability" .

prod:HeatingCapability rdf:type prod:Capability ;
    rdfs:label "Heating Capability" .

prod:AssemblyCapability rdf:type prod:Capability ;
    rdfs:label "Assembly Capability" .

prod:CuttingCapability rdf:type prod:Capability ;
    rdfs:label "Cutting Capability" .

# ===== Example Machine Instances =====

prod:CoolingMachine-01 rdf:type prod:Machine ;
    rdfs:label "Cooling Machine 01" ;
    prod:hasCapability prod:CoolingCapability ;
    prod:hasAASEndpoint [
        prod:baseURL "http://aas-server/api/assets/cooling-01"^^xsd:anyURI ;
        prod:submodelPath "/submodels/sensorData" ;
        prod:submodelPath "/submodels/maintenanceLog"
    ] .

prod:HeatingMachine-01 rdf:type prod:Machine ;
    rdfs:label "Heating Machine 01" ;
    prod:hasCapability prod:HeatingCapability ;
    prod:hasAASEndpoint [
        prod:baseURL "http://aas-server/api/assets/heating-01"^^xsd:anyURI ;
        prod:submodelPath "/submodels/sensorData"
    ] .

prod:AssemblyRobot-01 rdf:type prod:Machine ;
    rdfs:label "Assembly Robot 01" ;
    prod:hasCapability prod:AssemblyCapability ;
    prod:hasAASEndpoint [
        prod:baseURL "http://aas-server/api/assets/assembly-01"^^xsd:anyURI ;
        prod:submodelPath "/submodels/operationLog"
    ] .